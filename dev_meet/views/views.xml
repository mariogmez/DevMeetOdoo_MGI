    <!-- Top menu item -->

    <menuitem name="dev_meet" id="dev_meet.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Management" id="dev_meet.menu_1" parent="dev_meet.menu_root"/>
    
    <!-- actions -->
    <menuitem name="Developer" id="dev_meet.menu_developer_list" parent="dev_meet.menu_1"
              action="dev_meet.action_developer_window"/>

    <menuitem name="Tecnologia" id="dev_meet.menu_tecnologia_list" parent="dev_meet.menu_1"
              action="dev_meet.action_tecnologia_window"/>

    <menuitem name="Evento" id="dev_meet.menu_eventno_list" parent="dev_meet.menu_1"
              action="dev_meet.action_evento_window"/>          

  </data>
</odoo>